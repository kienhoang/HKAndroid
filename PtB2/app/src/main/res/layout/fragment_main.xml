<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giải phương trình bậc 2"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a="
        android:id="@+id/tv_a"
        android:textSize="21dp"
        android:layout_above="@+id/et_b"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b="
        android:id="@+id/tv_b"
        android:textSize="21dp"
        android:layout_above="@+id/et_c"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c="
        android:id="@+id/tv_c"
        android:textSize="21dp"
        android:layout_alignBottom="@+id/et_c"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1= "
        android:id="@+id/tvLB_x1"
        android:layout_alignTop="@+id/tv_x1"
        android:layout_alignParentStart="true"
        android:textSize="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x2= "
        android:id="@+id/tvLB_x2"
        android:layout_alignTop="@+id/tv_x2"
        android:layout_alignParentStart="true"
        android:textSize="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_x1"
        android:text="    "
        android:layout_below="@+id/et_c"
        android:layout_marginTop="70dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvLB_x1"
        android:textSize="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_x2"
        android:text="    "
        android:layout_marginTop="23dp"
        android:layout_below="@+id/tv_x1"
        android:layout_alignStart="@+id/tv_x1"
        android:layout_alignParentEnd="true"
        android:textSize="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_a"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvLB_x1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_b"
        android:layout_below="@+id/et_a"
        android:layout_alignStart="@+id/et_a"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_c"
        android:layout_below="@+id/et_b"
        android:layout_alignStart="@+id/et_b"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính"
        android:id="@+id/btn_tinh"
        android:layout_below="@+id/et_c"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
